#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;
class TV
{
public:
	string vurob;
	int price,date;
};

int _tmain(int argc, _TCHAR* argv[])
{
	int suma=0;
	TV obj[3];
	for(int i=0;i<3;i++){
		cout<<"Vvedit' vurobnuka: "<<endl;
		cin>>obj[i].vurob;
		cout<<"Vvedit' price: "<<endl;
		cin>>obj[i].price;
		cout<<"Vvedit' daty: "<<endl;
		cin>>obj[i].date;
		suma+=obj[i].price;
	}
	cout<<"Zagalna suma TV: " <<suma<<endl;
	system("pause");
}
